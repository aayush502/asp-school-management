@{
    ViewData["Title"] = "NIST COLLEGE";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="column"><img src="~/images/nist.jpg" height="500" width="550" /></div>
    <div class="column"><img src="~/images/nistian.jpg" height="500" width="580" /></div>
</div>

<h1 align="center">Library</h1>
<link rel="stylesheet" href="~/css/Home.css" />
<div class="slideshow-container">
    <!-- Full-width images with number and caption text -->
    <div class="mySlides fade">
        <div class="numbertext">1 / 3</div>
        <img src="~/images/lab1.jpg" style="width:100%" />
        <div class="text">lab</div>
    </div>

    <div class="mySlides fade">
        <div class="numbertext">2 / 3</div>
        <img src="~/images/lab2.jpg" style="width:100%">
        <div class="text">lab</div>
    </div>

    <div class="mySlides fade">
        <div class="numbertext">3 / 3</div>
        <img src="~/images/class1.jpg" style="width:100%">
        <div class="text">Study Room</div>
    </div>

    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>
<br>

<!-- The dots/circles -->
<div style="text-align:center">
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>
</div>
